<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quizCoach.controller.QuizViewController"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color: linear-gradient(to right, #0f3c63, #7bb1d1);">

    <center>
        <VBox alignment="CENTER" spacing="20" maxWidth="600">
            <padding>
                <Insets top="40"/>
            </padding>

            <Label text="📝 Your Quiz" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Display area (could be used for question output, summary, etc.) -->
            <TextArea fx:id="quizDisplayArea" editable="false" wrapText="true" prefHeight="300" prefWidth="600"
                      style="-fx-font-size: 14px; -fx-background-radius: 10;" />

            <Button fx:id="seeResultsButton" text="See Results" onAction="#handleSeeResults"
                    style="-fx-background-color: white; -fx-font-size: 16px; -fx-background-radius: 12;" />
        </VBox>
    </center>
</BorderPane>
